section.hero
  .container.hero__container  
    .header

      .header__logo
        a.logo(href='#')
          p.logo__abbr ЭА

      .header__menu
        nav.menu 
          -
            var items = [
              ["Главная", "main"],
              ["Обо мне", "about"],
              ["Навыки", "useful"],
              ["Работы", "works"],
              ["Отзывы", "feeds"],
              ["Связаться", "forms"]
            ];
          ul.menu__list
            each row in items 
              li.menu__item 
                a(href='#' + row[1]).menu__link #{row[0]}

      .header__socials
        - var icons = ["insta", "vk", "github"]
        ul.socials  
          each item, index in icons
            li.socials__item
              a(href="").socials__link
                +icon(item, "socials__icon")

      button.hamburger-menu-link
        .hamburger-menu-link__bars          

    .hero-content
      .content__salutation Личный сайт<br> веб-разработчика
      .content__name Эдуард<br> Алпаров   

    .hero__scroll-down              
      a(href="#about").scroll-down-btn 
        .scroll-text Скролл
        +icon('scroll', "scroll-svg")       