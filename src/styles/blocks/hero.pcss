.hero {
  height: 100vh;
  position: relative;
  min-height: 650px;
  margin-bottom: 753px;
}

.hero__scroll-down {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}     

.hero-content {
  display: flex;
  position: absolute; 
  top: 63%;
  left: 46%;
  transform: translate(-50%, -50%);
}
