.header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 150px;
}

.header__socials{
  margin: 0 20px;
}

.menu__link {
  font-size: 16px;
  color: rgb(255, 255, 255);
  line-height: 1.875;

  &:hover {
    text-decoration: underline;
  }

  &--active {
    color: #ff9a00;
  }
}        

.logo { 
  font-size: 36px;
  color: rgb(255, 255, 255);
  line-height: 0.833;
  text-decoration: none;
}