.user-info__avatar{
  width: 200px;
  margin-bottom: 80px;
}

.user__key {
  font-size: 16px;
  line-height: 30px;
  color: #ffffff;
  font-weight: 600;
  opacity: 0.5;
}

.user__value {
  font-size: 16px;
  color: rgb(255, 255, 255);
  line-height: 1.875;
}

.user-info {
  display: flex;
  flex-direction: column; 
  align-items: center
}

.user-info__data {
  border-spacing: 75px 3px;
}

.user-info__content{
  width: max-content;
}  