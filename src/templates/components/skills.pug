script(type="text/x-template")#skills-list
  .container-useful 
    ul.user-skills
      li.user-skills__item(v-for="category in skills" :key="category.title")
        skills-row(
          :category="category"
        )

script(type="text/x-template")#skills-row
  .skills-row
    h3.skills-row__title {{category.title}}
    ul.skills-row__list
      li.skills-row__item(v-for="skill in category.skills" :key="skill.id")
        skill(
          :skill="skill"
        )

script(type="text/x-template")#skill
  .skill
    svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
      defs.defs
        linearGradient(x1="0%" y1="50%" x2="100%" y2="100%")#skill__gradient
          stop(offset="60%" stop-color="#d47e1e").skill__feel--start
          stop(offset="100%" stop-color="#ff9a00").skill__feel--stop
      circle(
        r="67" cx="100" cy="100"
      ).skill__circle.skill__circle--under
      circle(
        r="67" cx="100" cy="100" ref="circle" stroke="url(#skill__gradient)" transform="rotate(-180 100 100)" 
      ).skill__circle.skill__circle--above
    .skill__title {{skill.title}}        

